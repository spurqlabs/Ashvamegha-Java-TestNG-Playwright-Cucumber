  },

  "searchPage": {
    "candidateNameInput": "//label[text()='Candidate Name']/following::input[1]",
    "candidateSuggestions": "//div[@role='listbox']//span",
    "searchButton": "//button[normalize-space()='Search']",
    "resultCandidateName": "//div[contains(@class,'oxd-table-row')][1]//div[@class='oxd-table-cell oxd-padding-cell'][2]"
