{
  "login": {
    "username": "input[name='username']",
    "password": "input[name='password']",
    "loginBtn": "button[type='submit']"
  },

  "dashboardPage": {
    "dashboardHeader": "//h6[text()='Dashboard']"
  },

  "recruitmentPage": {
    "recruitmentMenu": "a[href='/web/index.php/recruitment/viewRecruitmentModule']",
    "candidatesHeader": "h5:has-text('Candidates')",
    "addCandidateBtn": "button:has-text('Add')"
  },

  "searchPage": {
    "candidateNameInput": "//label[text()='Candidate Name']/following::input[1]",
    "candidateSuggestions": "//div[@role='listbox']//span",
    "searchButton": "//button[normalize-space()='Search']"
  },

  "candidatesPage": {
    "tableRows": "//div[contains(@class,'oxd-table-row')]",
    "rowByCandidateName": "//div[contains(@class,'oxd-table-row')]//div[contains(normalize-space(),'{CANDIDATE_NAME}')]/ancestor::div[contains(@class,'oxd-table-row')]",
    "viewButtonInRow": "button"
  },

  "addCandidatePage": {
    "addButton": "button:has-text('Add')",
    "addCandidateHeader": "h6:has-text('Add Candidate')",
    "firstName": "input[name='firstName']",
    "lastName": "input[name='lastName']",
    "email": "input[placeholder='Type here'] >> nth=0",
    "phone": "input[placeholder='Type here'] >> nth=1",
    "vacancyDropdown": "div.oxd-select-text",
    "vacancyOption": "div[role='option']:has-text('{VACANCY}')",
    "resumeUpload": "input[type='file']",
    "keywords": "input[placeholder*='comma']",
    "saveButton": "button[type='submit'].oxd-button",
    "successToast": ".oxd-toast--success"
  },

  "candidateDetailsPage": {
    "candidateNameHeader": "h6.orangehrm-main-title",
    "candidateStatus": "p.orangehrm-recruitment-status",
    "shortlistButton": "button:has-text('Shortlist')",
    "scheduleInterviewButton": "button:has-text('Schedule Interview')"
  },

  "shortlistPage": {
    "shortlistNotes": "textarea[placeholder='Type here']",
    "saveButton": "button[type='submit']"
  },

  "scheduleInterviewPage": {
    "interviewTitle": "input[placeholder='Enter Interview Title']",
    "interviewerInput": "input[placeholder='Type for hints...']",
    "interviewerSuggestion": "div[role='option']",
    "interviewDate": "input[placeholder='yyyy-mm-dd']",
    "interviewTime": "input[placeholder='hh:mm']",
    "interviewNotes": "textarea[placeholder='Type here']",
    "saveButton": "button[type='submit']"
  },

  "dashboard": {
    "userDropdown": "span.oxd-userdropdown-tab",
    "logoutButton": "a:has-text('Logout')"
  },

  "timePage": {
    "timeMenu": "a[href='/web/index.php/time/viewTimeModule']",
    "timesheetsDropdown": "span.oxd-topbar-body-nav-tab-item",
    "myTimesheetsOption": "ul[role='menu'] a.oxd-topbar-body-nav-tab-link:has-text('My Timesheets')"
  },

  "myTimesheetPage": {
    "pageHeader": "h6:has-text('My Timesheet')",
    "editButton": "//button[normalize-space()='Edit']",
    "statusLabel": "p:has-text('Status')",
    "tableRows": "div.oxd-table-row"
  },

  "timesheetPage": {
    "projectInput": "input[placeholder='Type for hints...']",
    "projectSuggestion": "div[role='option']",
    "activityDropdown": "div.oxd-select-text",
    "activityOption": "div[role='option']:has-text('{ACTIVITY}')",
    "mondayInput": "//table//tbody/tr[1]/td[3]//input",
    "tuesdayInput": "//table//tbody/tr[1]/td[4]//input",
    "wednesdayInput": "//table//tbody/tr[1]/td[5]//input",
    "thursdayInput": "//table//tbody/tr[1]/td[6]//input",
    "fridayInput": "//table//tbody/tr[1]/td[7]//input",
    "saturdayInput": "//table//tbody/tr[1]/td[8]//input",
    "sundayInput": "//table//tbody/tr[1]/td[9]//input",
    "saveButton": "button:has-text('Save')",
    "successToast": ".oxd-toast--success",
    "totalCell": "//table//tbody/tr[last()]/td[last()]"
  }
}
