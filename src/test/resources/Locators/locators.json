{
  "login": {
    "username": "input[name='username']",
    "password": "input[name='password']",
    "loginBtn": "button[type='submit']"
  },
  "dashboardPage": {
    "dashboardHeader": "h6:has-text('Dashboard')"
  },
  "recruitmentPage": {
    "recruitmentMenu": "a[href='/web/index.php/recruitment/viewRecruitmentModule']",
    "candidatesHeader": "h5:has-text('Candidates')",
    "addCandidateBtn": "button:has-text('Add')",
    "searchName": "input[placeholder='Type for hints...']",
    "candidateSuggestion": "div[role='option']:has-text('{NAME}')",
